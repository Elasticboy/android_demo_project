<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.cyrillrx.android.demo"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".DemoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".DemoActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".unlock.UnlockActivity"
            android:label="@string/title_unlock"
            android:theme="@style/UnlockTheme" />

        <activity
            android:name=".drawer.SimpleDrawerActivity"
            android:label="@string/title_simple_nav" />

        <activity
            android:name=".drawer.DoubleDrawerActivity"
            android:label="@string/title_double_nav"
            android:theme="@style/DoubleNavTheme" />

        <activity
            android:name=".actionbar.FadingActionBarActivity"
            android:label="@string/title_fading_action_bar"
            android:theme="@style/FadingActionBar" />

        <activity
            android:name=".cards.CardListActivity"
            android:label="@string/title_vertical_card_list" />

        <activity
            android:name=".cards.HorizontalCardListActivity"
            android:label="@string/title_horizontal_card_list" />

        <activity
            android:name=".cards.CardGridActivity"
            android:label="@string/title_vertical_card_grid" />

        <activity
            android:name=".cards.HorizontalCardGridActivity"
            android:label="@string/title_horizontal_card_grid" />

        <activity
            android:name=".BottomNavActivity"
            android:label="@string/title_bottom_nav" />

        <activity
            android:name=".notification.NotificationActivity"
            android:label="@string/title_notification" />

        <activity
            android:name=".PopupActivity"
            android:theme="@style/Transparent" />

    </application>

</manifest>
