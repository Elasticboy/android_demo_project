<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/unlock_accent" />
        </shape>
    </item>

    <item>
        <shape
            android:innerRadiusRatio="2.45"
            android:shape="ring"
            android:thicknessRatio="11"
            android:useLevel="false">
            <solid android:color="@color/unlock_primary" />
        </shape>
    </item>

    <item>
        <!--
        The default progress begins at 3 o'clock.
        Adding an extra 180Â° makes it begin at 9 o'clock.
        -->
        <rotate
            android:fromDegrees="180"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="180">
            <shape
                android:innerRadiusRatio="2.45"
                android:shape="ring"
                android:thicknessRatio="11"
                android:useLevel="true">
                <solid android:color="@color/unlock_primary_dark" />
            </shape>
        </rotate>
    </item>

</layer-list>